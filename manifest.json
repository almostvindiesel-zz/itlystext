{
    "name": "It Lyst",
    "description": "Simplifying Travel Planning",
    "version": "0.2",
    "manifest_version": 2,
    "minimum_chrome_version": "6",  

    "background": {
        "scripts": [
            "js/background.js",
            "js/jquery-3.0.0.min.js"
        ]
    },

    "icons": { 
        "48": "img/itlyst-fork-logo-128x128-black.png",
        "128": "img/itlyst-fork-logo-128x128-white.png" 
    },

    "browser_action": {
        "default_icon": "img/itlyst-fork-logo-128x128-white.png",
        "default_popup":"popup.html"
    },
    
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                //"js/getdata.js",
                //"js/getDOM.js",
                "js/jquery-3.0.0.min.js",
                "js/sendnote.js"//,
               // "js/newmenu.js"
            ]
        }
    ],
    "permissions": [
        "http://*/*",
        "https://*/*",
        "contextMenus",
        "activeTab"
    ]
}